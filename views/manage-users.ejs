<%- include ('layouts/header') %>
<br><br>
<h1 class="table">Manage Users</h1>

<table class="table">
  <thead>
    <th>ID</th>
    <th>EMAIL</th>
    <th>APPS</th>
  </thead>
  <tbody>
    <% users.forEach(user => { %>
    <tr>
      <td><%= user.id %></td>
      <td><a href="/admin/user/<%= user.id %>"><%= user.email %></a></td>
      <td>
        <form
          action="/admin/update-role"
          method="post"
          class="manage-user-form"
        >
          <input type="hidden" name="id" value="<%= user.id %>" />
          <select name="role" id="role">
            <option value="MODERATOR" <%= user.role === 'Requested App' ? 'selected' : '' %> >APP1</option>
            <option value="MODERATOR" <%= user.role === 'Requested App' ? 'selected' : '' %>>APP2</option>
            <option value="App3" <%= user.role === 'Requested App' ? 'app3' : '' %>>APP3</option>
            <option value="MODERATOR" <%= user.role === 'Requested App' ? 'selected' : '' %> >APP4</option>
            <option value="MODERATOR" <%= user.role === 'Requested App' ? 'selected' : '' %>>APP5</option>
            <option value="MODERATOR" <%= user.role === 'Requested App' ? 'selected' : '' %>>APP6</option>
            <option value="CLIENT" <%= user.role === 'Requested App' ? 'selected' : '' %> >DELETE</option>
          </select>
         <input type="submit" value="update">
        </form>
      </td>
    </tr>
    <% }) %>
  </tbody>
</table>


<%- include ('layouts/footer') %>